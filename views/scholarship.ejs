                    <option value="General">General</option>
                    <option value="SC">Scheduled Caste (SC)</option>
                    <option value="ST">Scheduled Tribe (ST)</option>
                    <option value="OBC">Other Backward Classes (OBC)</option>
                    <option value="EWS">Economically Weaker Sections (EWS)</option>
                    <option value="VJNT">Vimukta Jati and Nomadic Tribes (VJNT)</option>
                    <option value="NT">Nomadic Tribes (NT)</option>
                    <option value="SEBC">Socially and Educationally Backward Classes (SEBC)</option>
                    <option value="SBC">Special Backward Classes (SBC)</option>
                    <option value="Minority">Minority Communities (Muslim, Sikh, Christian, Buddhist, Parsi, Jain)</option>
                    <option value="PwD">Persons with Disabilities (PwD)</option>
                </select>
            </div>

            <!-- Current Education -->
            <div class="col-md-6">
                <label for="currentEducation" class="form-label">Current Education:</label>
                <select name="currentEducation" id="currentEducation" class="form-select" required>
                    <option value="">Select Current Education</option>

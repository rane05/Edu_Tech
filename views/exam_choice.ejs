<%- include('layouts/header'); %>
  <%- include('layouts/navbar'); %>

    <style>
      :root {
        --color-primary: #FFB800;
        --color-secondary: #00A8FF;
        --color-dark: #1A1A2E;
        --color-text: #2D3748;
        --color-bg-light: #F7FAFC;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        background: var(--color-bg-light);
      }

      /* Hero Section */
      .college-hero {
        padding: 120px 20px 80px;
        text-align: center;
        background: white;
      }

      .college-hero h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 800;
        color: var(--color-dark);
        margin-bottom: 15px;
      }

      .college-hero p {
        font-size: 1.125rem;
        color: #718096;
        margin-bottom: 40px;
      }

      /* Cards Container */
      .college-cards {
        max-width: 1200px;
        margin: -40px auto 80px;
        padding: 0 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
        gap: 40px;
      }

      .college-card {
        background: white;
        border-radius: 20px;
        padding: 60px 40px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
      }

      .college-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        transition: height 0.4s;
      }

      .college-card.cet::before {
        background: linear-gradient(90deg, var(--color-primary), #FFC024);
      }

      .college-card.jee::before {
        background: linear-gradient(90deg, var(--color-secondary), #0BC5FF);
      }

      .college-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      }

      .college-card:hover::before {
        height: 100%;
        opacity: 0.05;
      }

      .card-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        transition: transform 0.4s;
      }

      .college-card.cet .card-icon {
        background: linear-gradient(135deg, var(--color-primary), #FFC024);
        color: white;
      }

      .college-card.jee .card-icon {
        background: linear-gradient(135deg, var(--color-secondary), #0BC5FF);
        color: white;
      }

      .college-card:hover .card-icon {
        transform: scale(1.1) rotate(5deg);
      }

      .college-card h2 {
        font-size: 2rem;
        font-weight: 800;
        color: var(--color-dark);
        margin-bottom: 20px;
      }

      .college-card p {
        color: #718096;
        font-size: 1rem;
        line-height: 1.8;
        margin-bottom: 40px;
      }

      .card-btn {
        display: inline-block;
        padding: 16px 40px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.3s;
        border: 2px solid;
      }

      .college-card.cet .card-btn {
        background: var(--color-primary);
        color: var(--color-dark);
        border-color: var(--color-primary);
        box-shadow: 0 4px 15px rgba(255, 184, 0, 0.3);
      }

      .college-card.cet .card-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 184, 0, 0.4);
      }

      .college-card.jee .card-btn {
        background: var(--color-secondary);
        color: white;
        border-color: var(--color-secondary);
        box-shadow: 0 4px 15px rgba(0, 168, 255, 0.3);
      }

      .college-card.jee .card-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 168, 255, 0.4);
      }

      .features-list {
        list-style: none;
        text-align: left;
        margin-bottom: 30px;
      }

      .features-list li {
        padding: 10px 0;
        color: var(--color-text);
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .features-list li::before {
        content: 'âœ“';
        width: 24px;
        height: 24px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        flex-shrink: 0;
      }

      .college-card.cet .features-list li::before {
        background: rgba(255, 184, 0, 0.15);
        color: var(--color-primary);
      }

      .college-card.jee .features-list li::before {
        background: rgba(0, 168, 255, 0.15);
        color: var(--color-secondary);
      }

      @media (max-width: 968px) {
        .college-cards {
          grid-template-columns: 1fr;
          gap: 30px;
        }

        .college-card {
          padding: 40px 30px;
        }
      }
    </style>

    <!-- Hero Section -->
    <section class="college-hero">
      <h1>Find Your Perfect College</h1>
      <p>Choose your path and discover the best institutions for your future</p>
    </section>

    <!-- College Cards -->
    <div class="college-cards">
      <!-- CET Card -->
      <div class="college-card cet">
        <div class="card-icon">
          <i class="fas fa-graduation-cap"></i>
        </div>
        <h2>CET Path</h2>
        <ul class="features-list">
          <li>Personalized college recommendations</li>
          <li>Institutes matching your CET score</li>
          <li>Detailed admission insights</li>
          <li>Start your journey to success</li>
        </ul>
        <a href="/cetCollege" class="card-btn">Explore CET Colleges</a>
      </div>

      <!-- JEE Card -->
      <div class="college-card jee">
        <div class="card-icon">
          <i class="fas fa-rocket"></i>
        </div>
        <h2>JEE Path</h2>
        <ul class="features-list">
          <li>Tailored college recommendations</li>
          <li>Top engineering institutes for JEE</li>
          <li>Comprehensive placement data</li>
          <li>Achieve your dream career</li>
        </ul>
        <a href="/cetCollege" class="card-btn">Explore JEE Colleges</a>
      </div>
    </div>

    <%- include('layouts/footer'); %>
      </body>

      </html>
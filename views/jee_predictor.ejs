<%- include('layouts/header'); %>
    <%- include('layouts/navbar'); %>

        <div class="container" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="row">
                <!-- Search Form -->
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm" style="border-radius: 12px;">
                        <h3 class="mb-4">‚öõÔ∏è JEE College Predictor</h3>
                        <div class="alert alert-info">
                            <small>Predicts colleges based on All India Quota seats in Maharashtra.</small>
                        </div>
                        <form action="/api/jee/predict" method="POST">
                            <div class="mb-3">
                                <label class="form-label">JEE Main Percentile</label>
                                <input type="number" step="0.01" name="jeeScore" class="form-control" required
                                    placeholder="e.g. 90.5" value="<%= locals.jeeScore || '' %>">
                            </div>

                            <!-- State Locked to Maharashtra -->
                            <input type="hidden" name="state" value="Maharashtra">

                            <button type="submit" class="btn btn-primary w-100"
                                style="background: linear-gradient(135deg, #00A8FF, #0BC5FF); border:none;">üîÆ Predict
                                Colleges (AI Quota)</button>
                        </form>

                        <% if(locals.error) { %>
                            <div class="alert alert-danger mt-3">
                                <%= error %>
                            </div>
                            <% } %>
                    </div>
                </div>

                <!-- Results Display -->
                <div class="col-md-8">
                    <% if(locals.results && results.length> 0) { %>
                        <h4 class="mb-3">üéØ Recommended Colleges (<%= results.length %>)</h4>
                        <% results.forEach(college=> { %>
                            <div class="card mb-3 shadow-sm border-0">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title text-primary">
                                                <%= college.name %>
                                            </h5>
                                            <h6 class="card-subtitle mb-2 text-muted"><i
                                                    class="fas fa-map-marker-alt"></i>
                                                <%= college.location %>
                                            </h6>
                                        </div>
                                        <span class="badge bg-success">
                                            <%= college.rating %> ‚òÖ
                                        </span>
                                    </div>

                                    <div class="row mt-2">
                                        <div class="col-md-6"><small><strong>Fees:</strong> ‚Çπ<%= college.fees %></small>
                                        </div>
                                        <div class="col-md-6"><small><strong>Placement:</strong>
                                                <%= college.placement %>/10
                                            </small></div>
                                    </div>

                                    <hr>
                                    <h6>Eligible Branches (AI Quota):</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        <% college.branches.forEach(branch=> { %>
                                            <span class="badge bg-light text-dark border">
                                                <%= branch.name %> (Cutoff: <%= branch.cutoff %>)
                                            </span>
                                            <% }); %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <% } else if(locals.results) { %>
                                    <div class="alert alert-warning">No colleges found matching your criteria. Try
                                        lowering the cutoff. (Note: Ensure 'All India' quota data exists for these
                                        colleges)</div>
                                    <% } else { %>
                                        <div class="text-center text-muted mt-5">
                                            <i class="fas fa-atom fa-3x mb-3"></i>
                                            <h5>Enter your JEE score to see college predictions</h5>
                                        </div>
                                        <% } %>
                </div>
            </div>
        </div>
<!-- Modern Glassmorphism Navbar -->
<style>
    :root {
        --nav-primary: #FFB800;
        --nav-secondary: #00A8FF;
        --nav-dark: #1A1A2E;
        --nav-text: #2D3748;
        --nav-glass-bg: rgba(255, 255, 255, 0.85);
        --nav-glass-border: rgba(255, 255, 255, 0.5);
        --nav-shadow: 0 4px 30px rgba(0, 0, 0, 0.05);
    }

    /* Navbar Container */
    .glass-nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 70px;
        background: var(--nav-glass-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border-bottom: 1px solid var(--nav-glass-border);
        box-shadow: var(--nav-shadow);
        z-index: 1000;
        transition: all 0.3s ease;
    }

    .nav-content {
        max-width: 1280px;
        margin: 0 auto;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 24px;
    }

    /* Logo Styles */
    .nav-logo {
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        z-index: 1002;
        padding: 5px;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .nav-logo:hover {
        transform: scale(1.05);
    }

    .nav-logo-icon {
        font-size: 1.8rem;
        background: linear-gradient(135deg, #FFB800 0%, #FF9F00 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        transition: transform 0.5s ease;
        filter: drop-shadow(0 2px 4px rgba(255, 184, 0, 0.3));
    }

    .nav-logo:hover .nav-logo-icon {
        transform: rotate(-15deg) scale(1.1);
    }

    .nav-logo-text {
        font-size: 1.6rem;
        font-weight: 800;
        color: var(--nav-dark);
        letter-spacing: -0.5px;
        position: relative;
    }

    .nav-logo-text span {
        background: linear-gradient(120deg, #2563EB, #00A8FF);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        position: relative;
    }

    .nav-logo-text::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #FFB800, #00A8FF);
        transition: width 0.3s ease;
        border-radius: 2px;
    }

    .nav-logo:hover .nav-logo-text::after {
        width: 100%;
    }

    /* Desktop Navigation */
    .nav-desktop {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-item {
        position: relative;
        padding: 10px 0;
    }

    .nav-link {
        color: var(--nav-text);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        transition: color 0.2s ease;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .nav-link i {
        font-size: 0.75rem;
        opacity: 0.6;
        transition: transform 0.2s;
    }

    .nav-link:hover {
        color: var(--nav-secondary);
    }

    .nav-link:hover i {
        transform: rotate(180deg);
        color: var(--nav-secondary);
    }

    /* Dropdowns */
    .nav-dropdown {
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%) translateY(10px);
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 8px;
        min-width: 220px;
        opacity: 0;
        visibility: hidden;
        transition: all 0.2s ease;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .nav-item:hover .nav-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateX(-50%) translateY(0);
    }

    .dropdown-link {
        display: block;
        padding: 10px 16px;
        color: var(--nav-text);
        text-decoration: none;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: all 0.2s;
        font-weight: 500;
    }

    .dropdown-link:hover {
        background: rgba(0, 168, 255, 0.08);
        color: var(--nav-secondary);
        transform: translateX(4px);
    }

    /* Auth Buttons */
    .nav-auth {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .btn-login {
        color: var(--nav-text);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .btn-login:hover {
        color: var(--nav-secondary);
    }

    .btn-signup {
        background: var(--nav-primary);
        color: var(--nav-dark);
        padding: 10px 24px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(255, 184, 0, 0.2);
    }

    .btn-signup:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(255, 184, 0, 0.3);
        background: #FFC024;
    }

    /* Mobile Toggle */
    .mobile-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
        z-index: 1002;
    }

    .bar {
        width: 26px;
        height: 2px;
        background: var(--nav-dark);
        transition: all 0.3s ease;
        border-radius: 2px;
    }

    /* Mobile Menu */
    .mobile-menu {
        position: fixed;
        top: 0;
        right: -100%;
        width: 300px;
        height: 100vh;
        background: white;
        padding: 90px 24px 24px;
        box-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 1001;
        overflow-y: auto;
    }

    .mobile-menu.active {
        right: 0;
    }

    .mobile-link-group {
        margin-bottom: 24px;
    }

    .mobile-group-title {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #A0AEC0;
        margin-bottom: 12px;
        font-weight: 700;
    }

    .mobile-link {
        display: block;
        padding: 12px 0;
        color: var(--nav-dark);
        text-decoration: none;
        font-weight: 500;
        border-bottom: 1px solid #F7FAFC;
    }

    /* Overlay */
    .nav-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.3);
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s;
        z-index: 1000;
        backdrop-filter: blur(4px);
    }

    .nav-overlay.active {
        opacity: 1;
        visibility: visible;
    }

    /* Active States for Hamburger */
    .mobile-toggle.active .bar:nth-child(1) {
        transform: translateY(8px) rotate(45deg);
    }

    .mobile-toggle.active .bar:nth-child(2) {
        opacity: 0;
    }

    .mobile-toggle.active .bar:nth-child(3) {
        transform: translateY(-8px) rotate(-45deg);
    }

    @media (max-width: 1024px) {

        .nav-desktop,
        .nav-auth {
            display: none;
        }

        .mobile-toggle {
            display: flex;
        }
    }
</style>


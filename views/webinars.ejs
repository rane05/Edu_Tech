<%- include('layouts/header'); %>
    <%- include('layouts/navbar'); %>

        <style>
            :root {
                --color-primary: #FFB800;
                --color-secondary: #00A8FF;
                --color-accent: #6C63FF;
                --color-dark: #1A1A2E;
                --color-text: #2D3748;
                --color-text-light: #718096;
                --color-bg: #FFFFFF;
                --color-bg-light: #F7FAFC;
                --color-bg-dark: #16213E;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', sans-serif;
                color: var(--color-text);
                line-height: 1.6;
                background: var(--color-bg);
            }

            /* Shared Components */
            .section-title {
                text-align: center;
                font-size: 2.5rem;
                font-weight: 700;
                color: var(--color-dark);
                margin-bottom: 20px;
            }

            .section-subtitle {
                text-align: center;
                font-size: 1.125rem;
                color: var(--color-text-light);
                margin-bottom: 60px;
                max-width: 600px;
                margin-left: auto;
                margin-right: auto;
            }

            .btn-primary {
                display: inline-block;
                padding: 12px 30px;
                background: var(--color-primary);
                color: white;
                border: none;
                border-radius: 30px;
                font-weight: 600;
                cursor: pointer;
                text-decoration: none;
                transition: all 0.3s;
            }

            .btn-primary:hover {
                background: #E5A700;
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(255, 184, 0, 0.3);
                color: white;
            }

            .btn-secondary {
                display: inline-block;
                padding: 12px 30px;
                background: var(--color-secondary);
                color: white;
                border: none;
                border-radius: 30px;
                font-weight: 600;
                cursor: pointer;
                text-decoration: none;
                transition: all 0.3s;
            }

            .btn-secondary:hover {
                background: #0088CC;
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(0, 168, 255, 0.3);
                color: white;
            }

            /* Hero Section (Featured Webinar) */
            .hero-section {
                padding: 80px 20px;
                background: var(--color-bg-light);
                position: relative;
                overflow: hidden;
            }

            .hero-container {
                max-width: 1200px;
                margin: 0 auto;
                display: grid;
                grid-template-columns: 1fr 1fr;
                gap: 60px;
                align-items: center;
            }

            .featured-badge {
                display: inline-flex;
                align-items: center;
                gap: 8px;
                background: rgba(255, 184, 0, 0.1);
                color: #D97706;
                padding: 6px 16px;
                border-radius: 20px;
                font-weight: 600;
                font-size: 0.875rem;
                margin-bottom: 20px;
            }

            .pulse-dot {
                width: 8px;
                height: 8px;
                background: #FFB800;
                border-radius: 50%;
                animation: pulse 2s infinite;
            }

            @keyframes pulse {
                0% {
                    box-shadow: 0 0 0 0 rgba(255, 184, 0, 0.7);
                }

                70% {
                    box-shadow: 0 0 0 10px rgba(255, 184, 0, 0);
                }

                100% {
                    box-shadow: 0 0 0 0 rgba(255, 184, 0, 0);
                }
            }

            .hero-content h1 {
                font-size: clamp(2rem, 5vw, 3rem);
                font-weight: 800;
                color: var(--color-dark);
                margin-bottom: 15px;
                line-height: 1.2;
            }

            .speaker-meta {
                display: flex;
                align-items: center;
                gap: 15px;
                margin-bottom: 25px;
            }

            .speaker-avatar {
                width: 60px;
                height: 60px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid white;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

            .hero-details {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                margin-bottom: 30px;
                font-size: 1rem;
                color: var(--color-text);
            }

            .detail-item {
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .detail-item i {
                color: var(--color-secondary);
            }

            .hero-image {
                position: relative;
                height: 400px;
                border-radius: 20px;
                overflow: hidden;
                box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
            }

            .hero-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .hero-image:hover img {
                transform: scale(1.05);
            }

            .overlay-gradient {
                position: absolute;
                inset: 0;
                background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
            }

            /* Webinar Grid Section */
            .grid-section {
                padding: 80px 20px;
                background: white;
            }

            .webinar-grid {
                max-width: 1200px;
                margin: 0 auto;
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
                gap: 40px;
            }

            .webinar-card {
                background: white;
                border-radius: 20px;
                overflow: hidden;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                transition: all 0.3s ease;
                border: 1px solid rgba(0, 0, 0, 0.05);
                display: flex;
                flex-direction: column;
            }

            .webinar-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

            .card-image {
                height: 200px;
                position: relative;
                overflow: hidden;
            }

            .card-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .card-badge {
                position: absolute;
                top: 15px;
                right: 15px;
                background: white;
                padding: 5px 12px;
                border-radius: 20px;
                font-size: 0.75rem;
                font-weight: 700;
                color: var(--color-dark);
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }

            .card-content {
                padding: 25px;
                flex: 1;
                display: flex;
                flex-direction: column;
            }

            .card-date {
                color: var(--color-secondary);
                font-size: 0.875rem;
                font-weight: 600;
                margin-bottom: 10px;
                display: block;
            }

            .card-title {
                font-size: 1.25rem;
                font-weight: 700;
                color: var(--color-dark);
                margin-bottom: 15px;
                line-height: 1.4;
            }

            .card-speaker {
                display: flex;
                align-items: center;
                gap: 10px;
                margin-bottom: 20px;
            }

            .card-speaker img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover;
            }

            .card-footer {
                margin-top: auto;
                padding-top: 20px;
                border-top: 1px solid rgba(0, 0, 0, 0.05);
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .attendees {
                font-size: 0.875rem;
                color: var(--color-text-light);
            }

            /* Past Recordings Section */
            .past-section {
                padding: 80px 20px;
                background: var(--color-bg-light);
            }

            /* Registration Modal */
            .modal-content {
                border-radius: 20px;
                border: none;
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
            }

            .modal-header {
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
                padding: 24px;
            }

            .modal-body {
                padding: 30px;
            }

            .form-control {
                border-radius: 10px;
                padding: 12px 15px;
                border: 1px solid #E2E8F0;
                background: #F7FAFC;
                margin-bottom: 20px;
            }

            .form-control:focus {
                box-shadow: 0 0 0 3px rgba(0, 168, 255, 0.1);
                border-color: var(--color-secondary);
                background: white;
            }

            /* Footer (Matching Homepage) */
            .footer {
                background: var(--color-bg-dark);
                color: white;
                padding: 60px 20px 30px;
            }

            .footer-container {
                max-width: 1200px;
                margin: 0 auto;
            }

            .footer-top {
                display: grid;
                grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
                gap: 40px;
                margin-bottom: 40px;
            }

            .footer-column h3 {
                font-size: 1.125rem;
                margin-bottom: 20px;
            }

            .footer-column ul {
                list-style: none;
            }

            .footer-column ul li {
                margin-bottom: 10px;
            }

            .footer-column a {
                color: rgba(255, 255, 255, 0.7);
                text-decoration: none;
                transition: color 0.3s;
            }

            .footer-column a:hover {
                color: white;
            }

            .newsletter-form {
                display: flex;
                gap: 10px;
                margin-top: 20px;
            }

            .newsletter-form input {
                flex: 1;
                padding: 12px 20px;
                border: none;
                border-radius: 25px;
                outline: none;
            }

            .newsletter-form button {
                padding: 12px 30px;
                background: var(--color-primary);
                color: white;
                border: none;
                border-radius: 25px;
                font-weight: 600;
                cursor: pointer;
            }

            .footer-bottom {
                padding-top: 30px;
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                text-align: center;
                color: rgba(255, 255, 255, 0.6);
            }

            /* Responsive */
            @media (max-width: 768px) {
                .hero-container {
                    grid-template-columns: 1fr;
                }

                .hero-image {
                    height: 250px;
                    order: -1;
                }

                .footer-top {
                    grid-template-columns: 1fr;
                }
            }
        </style>


        <!-- Past Recordings Section -->
        <section class="past-section">
            <h2 class="section-title">Past Recordings</h2>
            <p class="section-subtitle">Missed a session? Catch up with our library of recorded webinars.</p>

            <div class="webinar-grid">
                <% const pastWebinars=[ { speaker: "Love Babbar" ,
                    image: "https://yt3.googleusercontent.com/ytc/APkrFKaHM7sJgXwGgWuKvMSWX8n_YSHj6Qq2HWKpczo3=s176-c-k-c0x00ffffff-no-rj"

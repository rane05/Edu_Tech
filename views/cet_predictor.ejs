<%- include('layouts/header'); %>
    <%- include('layouts/navbar'); %>

        <div class="container" style="margin-top: 100px; margin-bottom: 50px;">
            <div class="row">
                <!-- Search Form -->
                <div class="col-md-4">
                    <div class="card p-4 shadow-sm" style="border-radius: 12px;">
                        <h3 class="mb-4">ðŸŽ“ College Predictor</h3>
                        <form action="/api/cet/predict" method="POST">
                            <div class="mb-3">
                                <label class="form-label">CET Percentile</label>
                                <input type="number" step="0.01" name="score" class="form-control"
                                    placeholder="e.g. 85.5" value="<%= locals.score || '' %>">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <select name="category" class="form-select" required>
                                    <option value="OPEN" <%=locals.category==='OPEN' ? 'selected' : '' %>>OPEN / General
                                    </option>
                                    <option value="OBC" <%=locals.category==='OBC' ? 'selected' : '' %>>OBC</option>
                                    <option value="SC" <%=locals.category==='SC' ? 'selected' : '' %>>SC</option>
                                    <option value="ST" <%=locals.category==='ST' ? 'selected' : '' %>>ST</option>
                                </select>
                            </div>
                            <!-- State Locked to Maharashtra -->
                            <input type="hidden" name="state" value="Maharashtra">

                            <button type="submit" class="btn btn-primary w-100">ðŸ”® Predict Colleges</button>
                        </form>

                        <% if(locals.error) { %>
                            <div class="alert alert-danger mt-3">
                                <%= error %>
                            </div>
                            <% } %>
                    </div>
                </div>

                <!-- Results Display -->
                <div class="col-md-8">
                    <% if(locals.results && results.length> 0) { %>
                        <h4 class="mb-3">ðŸŽ¯ Recommended Colleges (<%= results.length %>)</h4>
                        <% results.forEach(college=> { %>
                            <div class="card mb-3 shadow-sm border-0">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title text-primary">
                                                <%= college.name %>
                                            </h5>
                                            <h6 class="card-subtitle mb-2 text-muted"><i
                                                    class="fas fa-map-marker-alt"></i>
                                                <%= college.location %>
                                            </h6>
                                        </div>
                                        <span class="badge bg-success">
                                            <%= college.rating %> â˜…
                                        </span>
                                    </div>

                                    <div class="row mt-2">
                                        <div class="col-md-6"><small><strong>Fees:</strong> â‚¹<%= college.fees %></small>
                                        </div>
                                        <div class="col-md-6"><small><strong>Placement:</strong>
                                                <%= college.placement %>/10
                                            </small></div>
                                    </div>

                                    <hr>
                                    <h6>Eligible Branches:</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        <% college.branches.forEach(branch=> { %>
                                            <span class="badge bg-light text-dark border">
                                                <%= branch.name %> (Cutoff: <%= branch.cutoff %>)
                                            </span>
                                            <% }); %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <% } else if(locals.results) { %>
                                    <div class="alert alert-warning">No colleges found matching your criteria. Try
                                        lowering the cutoff.</div>
                                    <% } else { %>
                                        <div class="text-center text-muted mt-5">
                                            <i class="fas fa-university fa-3x mb-3"></i>
                                            <h5>Enter your score to see college predictions</h5>
                                        </div>
                                        <% } %>
                </div>
            </div>
        </div>
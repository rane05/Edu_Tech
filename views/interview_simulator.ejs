<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Interview Simulator - EduNavigator</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 50%, #312e81 100%);
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* 3D Interactive Background */
        .interactive-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .bg-element {
            position: absolute;
            background: linear-gradient(135deg, rgba(79, 70, 229, 0.1), rgba(236, 72, 153, 0.1));
            border-radius: 50%;
            animation: float 20s ease-in-out infinite;
        }

        .bg-element:nth-child(1) {
            width: 300px;
            height: 300px;
            top: -150px;
            left: -150px;
            animation-delay: 0s;
        }

        .bg-element:nth-child(2) {
            width: 200px;
            height: 200px;
            top: 50%;
            right: -100px;
            animation-delay: 5s;
        }

        .bg-element:nth-child(3) {
            width: 250px;
            height: 250px;
            bottom: -125px;
            left: 50%;
            animation-delay: 10s;
        }

        @keyframes float {

            0%,
            100% {
                transform: translate(0, 0) rotate(0deg);
                opacity: 0.1;
            }

            33% {
                transform: translate(50px, 50px) rotate(120deg);
                opacity: 0.2;
            }

            66% {
                transform: translate(-30px, 80px) rotate(240deg);
                opacity: 0.15;
            }
        }

        /* Enhanced Header */
        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 60px 0;
            position: relative;
            perspective: 1000px;
        }

        .header h1 {
            font-size: 4rem;
            font-weight: 800;
            background: linear-gradient(135deg, #60a5fa, #a78bfa, #f472b6, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 20px;
            text-shadow: 0 0 30px rgba(96, 165, 250, 0.3);
            animation: glow 2s ease-in-out infinite alternate;
            transform-style: preserve-3d;
        }

        @keyframes glow {
            from {
                text-shadow: 0 0 20px rgba(96, 165, 250, 0.5);
            }

            to {
                text-shadow: 0 0 30px rgba(236, 72, 153, 0.8), 0 0 40px rgba(96, 165, 250, 0.6);
            }
        }

        .header p {
            font-size: 1.3rem;
            color: #cbd5e1;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.8;
            opacity: 0;
            animation: fadeInUp 0.8s ease 0.3s forwards;
        }

        /* 3D Main Content */
        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            margin-bottom: 40px;
            perspective: 1000px;
        }

        .form-section,
        .results-section {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(25px);
            border-radius: 25px;
            padding: 35px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
        }

        .form-section::before,
        .results-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(79, 70, 229, 0.05) 0%, rgba(236, 72, 153, 0.05) 100%);
            opacity: 0;
            transition: all 0.5s ease;
            transform: scale(0.8);
            z-index: -1;
        }

        .form-section:hover::before,
        .results-section:hover::before {
            opacity: 1;
            transform: scale(1);
        }

        .form-section:hover,
        .results-section:hover {
            transform: translateY(-10px) translateZ(20px) rotateX(5deg);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3);
            border-color: rgba(79, 70, 229, 0.3);
        }

        .form-section h2,
        .results-section h2 {
            font-size: 2rem;
            margin-bottom: 30px;
            color: #fbbf24;
            text-align: center;
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            position: relative;
        }

        .form-section h2::after,
        .results-section h2::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            border-radius: 2px;
        }

        /* Enhanced Form Elements */
        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: #e2e8f0;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 18px;
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.08);
            color: white;
            font-size: 1rem;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            backdrop-filter: blur(10px);
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: #60a5fa;
            box-shadow: 0 0 25px rgba(96, 165, 250, 0.4);
            transform: translateY(-2px) scale(1.02);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 140px;
        }

        /* Enhanced Buttons */
        .btn {
            background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
            color: white;
            border: none;
            padding: 18px 35px;
            border-radius: 15px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            margin: 12px 8px;
            position: relative;
            overflow: hidden;
            transform-style: preserve-3d;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.6s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:hover {
            transform: translateY(-3px) translateZ(10px) scale(1.05);
            box-shadow: 0 15px 35px rgba(59, 130, 246, 0.5);
        }

        .btn:active {
            transform: translateY(-1px) translateZ(5px) scale(1.02);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

        .btn-group {
            text-align: center;
            margin-top: 25px;
        }

        /* Enhanced Loading Animation */
        .loading {
            text-align: center;
            padding: 50px;
            color: #cbd5e1;
        }

        .spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(255, 255, 255, 0.1);
            border-top: 4px solid #60a5fa;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 25px;
            position: relative;
        }

        .spinner::after {
            content: '';
            position: absolute;
            top: -4px;
            left: -4px;
            right: -4px;
            bottom: -4px;
            border: 2px solid transparent;
            border-top: 2px solid #ec4899;
            border-radius: 50%;
            animation: spin 1.5s linear infinite reverse;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Enhanced Feedback Container */
        .feedback-container {
            background: rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            padding: 30px;
            margin-top: 25px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            transition: all 0.3s ease;
        }

        .feedback-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        /* Enhanced Sentiment Badge */
        .sentiment-badge {
            display: inline-block;
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1rem;
            margin-bottom: 25px;
            text-transform: uppercase;
            letter-spacing: 1px;
            animation: badgePulse 2s ease-in-out infinite;
        }

        @keyframes badgePulse {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        .sentiment-positive {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            box-shadow: 0 5px 15px rgba(16, 185, 129, 0.4);
        }

        .sentiment-negative {
            background: linear-gradient(135deg, #ef4444, #dc2626);
            color: white;
            box-shadow: 0 5px 15px rgba(239, 68, 68, 0.4);
        }

        .sentiment-neutral {
            background: linear-gradient(135deg, #6b7280, #4b5563);
            color: white;
            box-shadow: 0 5px 15px rgba(107, 114, 128, 0.4);
        }

        /* Enhanced Confidence Bar */
        .confidence-bar {
            background: rgba(255, 255, 255, 0.15);
            border-radius: 15px;
            height: 25px;
            margin: 20px 0;
            overflow: hidden;
            position: relative;
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .confidence-fill {
            height: 100%;
            background: linear-gradient(90deg, #ef4444, #f59e0b, #10b981, #3b82f6);
            border-radius: 15px;
            transition: width 1.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
            overflow: hidden;
        }

        .confidence-fill::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: shimmer 2s ease-in-out infinite;
        }

        @keyframes shimmer {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(100%);
            }
        }

        /* Enhanced Feedback Sections */
        .feedback-section {
            margin: 25px 0;
            padding: 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            border-left: 4px solid #60a5fa;
            transition: all 0.3s ease;
        }

        .feedback-section:hover {
            background: rgba(255, 255, 255, 0.08);
            transform: translateX(5px);
        }

        .feedback-section h3 {
            color: #fbbf24;
            margin-bottom: 15px;
            font-size: 1.4rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .feedback-list {
            list-style: none;
            padding-left: 0;
        }

        .feedback-list li {
            background: rgba(255, 255, 255, 0.08);
            margin: 10px 0;
            padding: 15px 18px;
            border-radius: 10px;
            border-left: 4px solid #60a5fa;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .feedback-list li::before {
            content: 'âœ¨';
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            opacity: 0;
            transition: all 0.3s ease;
        }

        .feedback-list li:hover {
            background: rgba(255, 255, 255, 0.12);
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .feedback-list li:hover::before {
            opacity: 1;
            transform: translateY(-50%) rotate(360deg);
        }

        /* Enhanced Camera Section */
        .camera-section {
            text-align: center;
            margin-top: 40px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.15);
            transition: all 0.3s ease;
        }

        .camera-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .camera-section h3 {
            color: #fbbf24;
            margin-bottom: 20px;
            font-size: 1.5rem;
        }

        #video {
            width: 100%;
            max-width: 450px;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
        }

        #video:hover {
            transform: scale(1.02);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
        }

        .camera-controls {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* Real-time Feedback Indicators */
        .real-time-feedback {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(16, 185, 129, 0.9);
            color: white;
            padding: 15px 20px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            transform: translateX(400px);
            transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            z-index: 1000;
        }

        .real-time-feedback.show {
            transform: translateX(0);
        }

        /* Enhanced Animations */
        .fade-in {
            animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .slide-in-left {
            animation: slideInLeft 0.8s ease-out;
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-40px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .slide-in-right {
            animation: slideInRight 0.8s ease-out;
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(40px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .main-content {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .header h1 {
                font-size: 2.8rem;
            }

            .container {
                padding: 15px;
            }

            .form-section,
            .results-section {
                padding: 25px;
            }

            .btn {
                padding: 15px 25px;
                font-size: 1rem;
            }
        }

        /* Interactive Cursor */
        .interactive-cursor {
            position: fixed;
            width: 20px;
            height: 20px;
            background: linear-gradient(135deg, #60a5fa, #ec4899);
            border-radius: 50%;
            pointer-events: none;
            z-index: 9999;
            transition: transform 0.1s ease;
            mix-blend-mode: difference;
        }

        .interactive-cursor.hover {
            transform: scale(2);
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: rgba(255, 255, 255, 0.95);
            margin: auto;
            padding: 40px;
            border-radius: 20px;
            width: 90%;
            max-width: 500px;
            text-align: center;
            position: relative;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            animation: modalSlideIn 0.4s ease-out;
        }

        @keyframes modalSlideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal h2 {
            color: #333;
            margin-bottom: 20px;
            font-size: 2rem;
        }

        .modal p {
            color: #666;
            margin-bottom: 30px;
            font-size: 1.1rem;
        }

        .modal-btn {
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 1.2rem;
            border-radius: 50px;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
            font-weight: 600;
        }

        .modal-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(245, 158, 11, 0.3);
        }

        /* Loading Overlay */
        .loading-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.9);
            z-index: 2000;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .loading-content {
            text-align: center;
        }

        .loading-spinner-large {
            width: 80px;
            height: 80px;
            border: 8px solid #f3f3f3;
            border-top: 8px solid #fbbf24;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        .fade-in {
            animation: fadeIn 0.8s ease-in;
        }

        /* Progress Indicator */
        .progress-indicator {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            z-index: 1001;
        }

        .progress-bar {
            height: 100%;
            background: linear-gradient(90deg, #60a5fa, #8b5cf6, #ec4899);
            width: 0%;
            transition: width 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .progress-bar::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            animation: progressShimmer 2s ease-in-out infinite;
        }

        @keyframes progressShimmer {
            0% {
                transform: translateX(-100%);
            }

            100% {
                transform: translateX(100%);
            }
        }
    </style>
</head>

<body>
    <!-- Interactive Background -->
    <div class="interactive-bg">
        <div class="bg-element"></div>
        <div class="bg-element"></div>
        <div class="bg-element"></div>
    </div>

    <!-- Progress Indicator -->
    <div class="progress-indicator">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <!-- Status Overlay (Thinking/Listening) -->
    <div id="statusOverlay"
        style="display:none; position:fixed; top:20px; left:50%; transform:translateX(-50%); z-index:2000; background:rgba(0,0,0,0.7); padding:10px 20px; border-radius:30px; border: 1px solid rgba(255,255,255,0.2); backdrop-filter:blur(10px);">
        <div style="display:flex; align-items:center; gap:10px; color:white;">
            <div id="statusIcon" class="spinner" style="width:20px; height:20px; margin:0; border-width:2px;"></div>
            <span id="statusText">AI is thinking...</span>
        </div>
    </div>

    <div class="container">
        <div class="header fade-in">
            <h1><i class="fas fa-microphone-alt"></i> Voice Interview AI</h1>
            <p>Experience a realistic interview. Spoken questions, real-time analysis, adaptive difficulty.</p>
        </div>

        <div class="main-content">
            <!-- SETUP SECTION -->
            <div class="form-section slide-in-left" id="setupSection">
                <h2><i class="fas fa-cog"></i> Interview Setup</h2>
                <form id="interviewForm">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" id="name" value="<%= user.name || '' %>" placeholder="Enter your full name"
                            required>
                    </div>

                    <div class="btn-group">
                        <button type="button" class="btn" id="startBtn">
                            <i class="fas fa-play"></i> Start Voice Interview
                        </button>
                    </div>
                </form>
            </div>

            <!-- INTERVIEW INTERFACE (Hidden initially) -->
            <div class="form-section fade-in" id="interviewInterface"
                style="display: none; width: 100%; max-width: 800px; margin: 0 auto; text-align: center;">

                <!-- AI Avatar / Visualizer -->
                <div
                    style="margin: 30px auto; width: 120px; height: 120px; border-radius: 50%; background: linear-gradient(135deg, #60a5fa, #ec4899); display: flex; align-items: center; justify-content: center; position: relative;">
                    <i class="fas fa-robot" style="font-size: 3rem; color: white;"></i>
                    <div id="speakingRing"
                        style="position: absolute; top: -5px; left: -5px; right: -5px; bottom: -5px; border: 3px solid #60a5fa; border-radius: 50%; opacity: 0;">
                    </div>
                </div>

                <!-- Live Transcript Area -->
                <div
                    style="background: rgba(255,255,255,0.05); padding: 20px; border-radius: 15px; margin-bottom: 30px; min-height: 150px; text-align: left;">
                    <p
                        style="color: #fbbf24; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                        <i class="fas fa-comment-dots"></i> Current Question:
                    </p>
                    <h3 id="currentQuestionText" style="color: white; margin-bottom: 20px;">Waiting to start...</h3>

                    <hr style="border-color: rgba(255,255,255,0.1); margin: 15px 0;">

                    <p
                        style="color: #34d399; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 10px;">
                        <i class="fas fa-microphone"></i> Your Answer:
                    </p>
                    <p id="liveTranscript" style="color: #cbd5e1; font-style: italic; min-height: 40px;">...</p>
                </div>

                <!-- Controls -->
                <div class="btn-group">
                    <button id="micBtn" class="btn"
                        style="border-radius: 50%; width: 70px; height: 70px; padding: 0; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; background: #ef4444;"
                        disabled>
                        <i class="fas fa-microphone-slash"></i>
                    </button>
                </div>
                <p id="micStatus" style="margin-top: 15px; color: #94a3b8;">Initialize interview to enable microphone
                </p>

                <button class="btn" id="finishAnswerBtn"
                    style="margin-top: 20px; display: none; background: linear-gradient(135deg, #10b981, #059669);">
                    <i class="fas fa-check"></i> Submit Answer
                </button>
            </div>

            <!-- FINAL REPORT SECTION (Hidden initially) -->
            <div class="results-section slide-in-right" id="reportSection" style="display: none;">
                <h2><i class="fas fa-clipboard-check"></i> Interview Report</h2>
                <div class="feedback-container">
                    <div class="sentiment-badge" id="finalScoreBadge">Score: 0/100</div>

                    <div class="feedback-section">
                        <h3>Summary</h3>
                        <p id="finalSummary">...</p>
                    </div>

                    <div class="feedback-section">
                        <h3>Strengths</h3>
                        <ul id="finalStrengths" class="feedback-list"></ul>
                    </div>

                    <div class="feedback-section">
                        <h3>Areas for Improvement</h3>
                        <ul id="finalWeaknesses" class="feedback-list"></ul>
                    </div>

                    <div class="feedback-section">
                        <h3>Recommendation</h3>
                        <p id="finalRecommendation" style="font-size: 1.2rem; font-weight: bold; color: #fbbf24;">...
                        </p>
                    </div>

                    <div class="btn-group">
                        <button class="btn" onclick="window.location.reload()">Start New Interview</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // --- CONFIGURATION ---
        const synth = window.speechSynthesis;
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        let recognition = new SpeechRecognition();

        // --- STATE ---
        let interviewId = null;
        let isListening = false;
        let isSpeaking = false;
        let fullTranscript = '';

        // --- DOM ELEMENTS ---
        const setupSection = document.getElementById('setupSection');
        const interviewInterface = document.getElementById('interviewInterface');
        const reportSection = document.getElementById('reportSection');
        const micBtn = document.getElementById('micBtn');
        const liveTranscript = document.getElementById('liveTranscript');
        const currentQuestionText = document.getElementById('currentQuestionText');
        const statusOverlay = document.getElementById('statusOverlay');
        const statusText = document.getElementById('statusText');
        const finishAnswerBtn = document.getElementById('finishAnswerBtn');
        const progressBar = document.getElementById('progressBar');
        const speakingRing = document.getElementById('speakingRing');

        // --- INITIALIZATION ---
        recognition.continuous = true;
        recognition.interimResults = true;
        recognition.lang = 'en-US';

        // --- EVENT LISTENERS ---
        document.getElementById('startBtn').addEventListener('click', startInterview);
        finishAnswerBtn.addEventListener('click', submitAnswer);

        // --- SPEECH RECOGNITION HANDLERS ---
        recognition.onstart = () => {
            isListening = true;
            micBtn.style.background = '#10b981'; // Green
            micBtn.innerHTML = '<i class="fas fa-microphone"></i>';
            micBtn.classList.add('pulse-animation');
            document.getElementById('micStatus').innerText = "Listening... Speak clearly.";
            finishAnswerBtn.style.display = 'inline-block';
        };

        recognition.onend = () => {
            if (isListening) recognition.start(); // Auto-restart if we supplied logic to keep it on
            else {
                micBtn.style.background = '#ef4444'; // Red
                micBtn.innerHTML = '<i class="fas fa-microphone-slash"></i>';
                micBtn.classList.remove('pulse-animation');
                document.getElementById('micStatus').innerText = "Microphone off.";
            }
        };

        recognition.onresult = (event) => {
            let interimTranscript = '';
            for (let i = event.resultIndex; i < event.results.length; ++i) {
                if (event.results[i].isFinal) {
                    fullTranscript += event.results[i][0].transcript;
                } else {
                    interimTranscript += event.results[i][0].transcript;
                }
            }
            liveTranscript.innerText = fullTranscript + ' ' + interimTranscript;
        };

        // --- CORE FUNCTIONS ---

        async function startInterview() {
            const name = document.getElementById('name').value;
            // Defaults for conversational flow
            const role = "Unspecified";
            const seniority = "Unspecified";
            const background = "Unspecified";

            if (!name) return alert("Please enter your name");

            showLoading("Initializing Interview...");

            try {
                const res = await fetch('/interview/start', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ role, seniority, name, background })
                });
                const data = await res.json();

                if (data.success) {
                    interviewId = data.interviewId;
                    hideLoading();

                    // Switch UI
                    setupSection.style.display = 'none';
                    interviewInterface.style.display = 'block';

                    // Update State
                    currentQuestionText.innerText = data.firstQuestion;
                    updateProgress(0, data.totalQuestions);

                    // AI Speaks Greeting first, then Question
                    await speakText(data.greeting);
                    await speakText(data.firstQuestion);

                    // Auto-start Mic
                    startListening();
                } else {
                    alert(data.error);
                    hideLoading();
                }
            } catch (e) {
                console.error(e);
                alert("Failed to start");
                hideLoading();
            }
        }

        async function submitAnswer() {
            stopListening();
            showLoading("Analyzing Response...");

            const transcriptToSend = liveTranscript.innerText; // Get what's currently visible
            // fullTranscript has final parts, but innerText has everything including interim if any left.

            try {
                const res = await fetch('/interview/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        interviewId,
                        transcript: transcriptToSend
                    })
                });
                const data = await res.json();

                if (data.success) {
                    // Reset transcript for next turn
                    fullTranscript = '';
                    liveTranscript.innerText = '...';
                    finishAnswerBtn.style.display = 'none';

                    // 1. Speak Feedback
                    if (data.feedback) {
                        updateStatus("AI is giving feedback...");
                        await speakText(data.feedback);
                    }

                    if (data.isCompleted) {
                        // End Interview
                        hideLoading();
                        showReport(data.finalReport);
                    } else {
                        // Next Question
                        hideLoading();
                        currentQuestionText.innerText = data.nextQuestion;
                        updateProgress(data.currentQuestionIndex, 5); // Assuming 5 is max

                        updateStatus("AI is asking next question...");
                        await speakText(data.nextQuestion);

                        startListening();
                    }
                }
            } catch (e) {
                console.error(e);
                alert("Error submitting answer");
                hideLoading();
            }
        }

        // --- UTILS ---

        function startListening() {
            if (isListening) return;
            try {
                fullTranscript = '';
                liveTranscript.innerText = '';
                recognition.start();
                isListening = true;
            } catch (e) { console.log("Mic already active"); }
        }

        function stopListening() {
            isListening = false;
            recognition.stop();
        }

        function speakText(text) {
            return new Promise((resolve) => {
                if (!text) return resolve();

                // Visuals
                speakingRing.style.opacity = '1';
                speakingRing.style.animation = 'pulse 1.5s infinite';

                // Cancel current speech
                synth.cancel();

                const utterance = new SpeechSynthesisUtterance(text);
                utterance.rate = 1.0;
                utterance.pitch = 1.0;

                // Try to find a good voice
                const voices = synth.getVoices();
                const preferredVoice = voices.find(v => v.name.includes('Google US English') || v.name.includes('Female')) || voices[0];
                if (preferredVoice) utterance.voice = preferredVoice;

                utterance.onend = () => {
                    speakingRing.style.opacity = '0';
                    speakingRing.style.animation = 'none';
                    resolve();
                };

                synth.speak(utterance);
            });
        }

        function showReport(report) {
            interviewInterface.style.display = 'none';
            reportSection.style.display = 'block';

            document.getElementById('finalScoreBadge').innerText = `Score: ${report.score}/100`;
            document.getElementById('finalSummary').innerText = report.summary;
            document.getElementById('finalRecommendation').innerText = report.recommendation;

            const sList = document.getElementById('finalStrengths');
            sList.innerHTML = report.strengths.map(s => `<li>${s}</li>`).join('');

            const wList = document.getElementById('finalWeaknesses');
            wList.innerHTML = report.weaknesses.map(w => `<li>${w}</li>`).join('');
        }

        function showLoading(msg) {
            statusOverlay.style.display = 'block';
            statusText.innerText = msg;
        }

        function hideLoading() {
            statusOverlay.style.display = 'none';
        }

        function updateStatus(msg) {
            statusOverlay.style.display = 'block';
            statusText.innerText = msg;
        }

        function updateProgress(current, total) {
            const pct = (current / total) * 100;
            progressBar.style.width = pct + '%';
        }

        // Styles injection for pulse animation if missing
        const style = document.createElement('style');
        style.innerHTML = `
            .pulse-animation {
                animation: pulse-red 2s infinite;
            }
            @keyframes pulse-red {
                0% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7); }
                70% { box-shadow: 0 0 0 10px rgba(239, 68, 68, 0); }
                100% { box-shadow: 0 0 0 0 rgba(239, 68, 68, 0); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>


<%- include('layouts/header'); %>

  <style>
    :root {
      --color-primary: #FFB800;
      --color-secondary: #00A8FF;
      --color-dark: #1A1A2E;
      --color-text: #2D3748;
      --color-bg-light: #F7FAFC;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      overflow-x: hidden;
    }

    .login-container {
      display: flex;
      min-height: 100vh;
    }

    /* Left Panel - Gradient */
    .login-left {
      flex: 1;
      background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
      position: relative;
      overflow: hidden;
    }

    .login-left::before {
      content: '';
      position: absolute;
      width: 400px;
      height: 400px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      top: -100px;
      right: -100px;
      animation: float 6s ease-in-out infinite;
    }

    .login-left::after {
      content: '';
      position: absolute;
      width: 300px;
      height: 300px;
      background: rgba(255, 255, 255, 0.08);
      border-radius: 50%;
      bottom: -80px;
      left: -80px;
      animation: float 8s ease-in-out infinite reverse;
    }

    @keyframes float {

      0%,
      100% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-20px);
      }
    }

    .login-welcome {
      position: relative;
      z-index: 1;
      color: white;
      text-align: center;
    }

    .login-welcome h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 20px;
      text-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .login-welcome p {
      font-size: 1.25rem;
      opacity: 0.95;
      line-height: 1.6;
    }

    /* Right Panel - Form */
    .login-right {
      flex: 1;
      background: white;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
    }

    .login-form-container {
      width: 100%;
      max-width: 450px;
    }

    .login-logo {
      text-align: center;
      margin-bottom: 40px;
    }

    .login-logo h2 {
      font-size: 2rem;
      font-weight: 800;
      color: var(--color-dark);
    }

    .login-logo h2 span {
      color: var(--color-secondary);
    }

    .login-header {
      text-align: center;
      margin-bottom: 40px;
    }

    .login-header h3 {
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--color-dark);
      margin-bottom: 10px;
    }

    .login-header p {
      color: #718096;
      font-size: 0.95rem;
    }

    .form-group {
      margin-bottom: 24px;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: var(--color-dark);
      margin-bottom: 8px;
      font-size: 0.9rem;
    }

    .form-input,
    .form-select {
      width: 100%;
      padding: 14px 18px;
      border: 2px solid #E2E8F0;
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s;
      background: white;
    }

    .form-input:focus,
    .form-select:focus {
      outline: none;
      border-color: var(--color-secondary);
      box-shadow: 0 0 0 3px rgba(0, 168, 255, 0.1);
    }

    .form-checkbox {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 24px;
    }

    .form-checkbox input {
      width: 18px;
      height: 18px;
      cursor: pointer;
    }

    .form-checkbox label {
      font-size: 0.9rem;
      color: #718096;
      cursor: pointer;
    }

    .btn-login {
      width: 100%;
      padding: 16px;
      background: var(--color-primary);
      color: var(--color-dark);
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s;
      box-shadow: 0 4px 15px rgba(255, 184, 0, 0.3);
    }

    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(255, 184, 0, 0.4);
      background: #FFC024;
    }

    .login-footer {
      text-align: center;
      margin-top: 30px;
    }

    .login-footer a {
      color: var(--color-secondary);
      text-decoration: none;
      font-weight: 600;
      transition: color 0.2s;
    }

    .login-footer a:hover {
      color: var(--color-primary);
    }

    .divider {
      text-align: center;
      margin: 20px 0;
      color: #A0AEC0;
      font-size: 0.85rem;
    }

    @media (max-width: 968px) {
      .login-container {
        flex-direction: column;
      }

      .login-left {
        min-height: 40vh;
        padding: 40px 20px;
      }

      .login-welcome h1 {
        font-size: 2rem;
      }

      .login-right {
        padding: 40px 20px;
      }
    }
  </style>

  <div class="login-container">
    <!-- Left Panel -->
    <div class="login-left">
      <div class="login-welcome">
        <h1>Welcome Back!</h1>
        <p>Your journey to academic excellence<br>continues here.</p>
      </div>
    </div>

    <!-- Right Panel -->
    <div class="login-right">
      <div class="login-form-container">
        <div class="login-logo">
          <h2>Edu<span>Navigator</span></h2>
        </div>

        <div class="login-header">
          <h3>Sign In</h3>
          <p>Enter your credentials to access your account</p>
        </div>

        <form action="/login" method="POST">
          <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-input" name="username" id="username" placeholder="Enter your username"
              required>
          </div>

          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-input" name="password" id="password" placeholder="Enter your password"
              required>
          </div>

          <div class="form-group">
            <label for="role" class="form-label">Select Role</label>
            <select class="form-select" name="role" id="role" required>
              <option value="student">Student</option>
              <option value="teacher">Teacher</option>
              <option value="parent">Parent</option>
            </select>
          </div>

          <div class="form-checkbox">
            <input type="checkbox" name="remember_me" id="remember_me">
            <label for="remember_me">Keep me logged in</label>
          </div>

          <button type="submit" class="btn-login">Log In</button>
        </form>

        <div class="login-footer">
          <p>Don't have an account? <a href="/register">Create Account</a></p>
          <div class="divider">or</div>
          <a href="#!">Forgot Password?</a>
        </div>
      </div>
    </div>
  </div>

  </body>

  </html>